<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintVertical_bias="0.196"
            android:layout_height="291dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.537"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="270dp"
            android:id="@+id/imageView" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView2"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_height="39dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.818"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:id="@+id/btnPlay"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="632dp" />
        <Constraint
            android:layout_height="38dp"
            motion:layout_constraintEnd_toStartOf="@+id/btnPlay"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.94"
            android:layout_width="28dp"
            android:id="@+id/imageButton7"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="632dp" />
        <Constraint
            android:id="@+id/imageButton8"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/btnPlay"
            android:layout_width="36dp"
            android:layout_height="39dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="632dp"
            motion:layout_constraintHorizontal_bias="0.515" />
        <Constraint
            motion:layout_constraintVertical_bias="0.85"
            android:layout_height="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/progressB" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/progressB"
            motion:layout_constraintVertical_bias="0.511"
            motion:layout_constraintTop_toBottomOf="@+id/imageButton4"
            motion:layout_constraintHorizontal_bias="0.879"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/txtTotalTime"
            android:alpha="0" />
        <Constraint
            android:id="@+id/txtProgress"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/progressB"
            motion:layout_constraintVertical_bias="0.522"
            motion:layout_constraintTop_toBottomOf="@+id/imgLoa"
            motion:layout_constraintHorizontal_bias="0.106"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/imgLoa"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/imageButton2"
            motion:layout_constraintHorizontal_bias="0.102"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="404dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/imageButton4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            motion:layout_constraintHorizontal_bias="0.816"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="460dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/imageButton5"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="35dp"
            android:layout_height="36dp"
            motion:layout_constraintHorizontal_bias="0.928"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="460dp"
            android:alpha="0" />
        <Constraint
            motion:layout_constraintVertical_bias="0.951"
            android:layout_height="65dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.048"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="82dp"
            android:id="@+id/imageView" />
        <Constraint
            motion:layout_constraintVertical_bias="0.904"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/textView3"
            motion:layout_constraintHorizontal_bias="0.412" />
        <Constraint
            android:id="@+id/textView4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="131dp"
            android:layout_height="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView3"
            motion:layout_constraintHorizontal_bias="0.435"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:scaleX="0.5"
            android:scaleY="0.5">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customPixelDimension="5px" />
        </Constraint>
    </ConstraintSet>
</MotionScene>